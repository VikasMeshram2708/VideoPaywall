generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Session {
  id           String   @id @default(cuid()) @map("_id")
  sessionToken String   @unique
  expires      DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?

  @@map("session")
}

model User {
  id         String       @id @default(cuid()) @map("_id")
  name       String
  email      String       @unique
  password   String
  avatar_url String?
  isPrime    Boolean?     @default(false)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  media      MediaStack[]
  Session    Session[]

  @@map("user")
}

model MediaStack {
  id        String   @id @default(cuid()) @map("_id")
  video_url String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?

  @@map("media")
}
